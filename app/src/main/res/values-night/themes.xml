<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.NFCDroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Mantén todas tus configuraciones actuales -->
        <item name="colorPrimary">#1F3A5F</item>
        <item name="colorPrimaryVariant">#0D1B2A</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Añade esto para sobrescribir solo los botones del diálogo -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.NFCDroid.AlertDialog</item>
    </style>

    <!-- Estilo específico para diálogos en modo oscuro -->
    <style name="ThemeOverlay.NFCDroid.AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/WhiteTextButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/WhiteTextButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/WhiteTextButton</item>
    </style>

    <style name="WhiteTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@android:color/white</item> <!-- Texto blanco -->
    </style>

</resources>